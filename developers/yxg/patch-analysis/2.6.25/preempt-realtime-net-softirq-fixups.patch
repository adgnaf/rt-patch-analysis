--- linux-2.6.25.4-rt1.orig/net/core/dev.c	2008-05-17 08:27:40.000000000 -0400
+++ linux-2.6.25.4-rt1/net/core/dev.c	2008-05-17 08:27:40.000000000 -0400
@@ -2272,7 +2272,7 @@ out:
 
 softnet_break:
 	__get_cpu_var(netdev_rx_stat).time_squeeze++;
-	__raise_softirq_irqoff(NET_RX_SOFTIRQ);
+	raise_softirq_irqoff(NET_RX_SOFTIRQ);
 	goto out;
 }
 
